 #!/bin/bash
 set -e
 
 echo "üîß Initialisiere App-Entwicklungsumgebung..."
 
 # Repos als Submodule klonen
 mkdir -p vendor
 
-# vendor repos aus vendor-repos.txt hinzuf√ºgen
